<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="6dp"
    android:layout_marginVertical="10dp"
    android:background="@drawable/theme_item_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.qiusuo.videoeditor.ui.widgegt.square.SquareCornerFrameLayout
        android:layout_width="match_parent"
        android:id="@+id/fl_theme"
        app:corner_radiu="8dp"
        app:squareRatio="1.33"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_theme_name"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView

            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            app:srcCompat="@mipmap/theme_thum"
            android:layout_height="match_parent"/>
    </com.qiusuo.videoeditor.ui.widgegt.square.SquareCornerFrameLayout>


<TextView
    app:layout_constraintTop_toBottomOf="@+id/fl_theme"
    android:gravity="center_vertical"
    android:paddingStart="16dp"
    android:text="情深深雨濛濛"
    android:textSize="16sp"
    android:textStyle="bold"
    android:id="@+id/tv_theme_name"
    android:textColor="@color/white"
    app:layout_constraintBottom_toBottomOf="parent"
    android:layout_width="match_parent"
    android:layout_height="35dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>