<?xml version="1.0" encoding="utf-8"?><!--底栏总高度52dp-->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingBottom="8dp"
    android:layout_height="match_parent">

    <ImageView
        app:layout_constraintVertical_chainStyle="packed"
        android:id="@+id/tab_icon"
        android:layout_width="@dimen/bottom_tab_image_size"
        android:layout_height="@dimen/bottom_tab_image_size"
        android:scaleType="fitXY"
        android:src="@drawable/main_home_select"
        app:layout_constraintBottom_toTopOf="@+id/tab_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tab_title"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_marginTop="6dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="aaaa"
        android:textColor="@color/selector_bottom_bar_title_color"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>